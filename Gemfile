gem 'capistrano-rvm', group: :development

group :development, :test do
  gem 'rspec-rails'
  gem 'shoulda-matchers'
  gem 'factory_girl_rails'
  gem 'database_cleaner'
  gem 'pry'
  gem 'mailcatcher'
end

