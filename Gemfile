gem 'omniauth'
gem 'omniauth-saml'
gem "rubycas-client", "~> 2.3.9"

gem 'roadie'

gem 'whenever'

gem 'bootstrap-sass'
gem 'will_paginate-bootstrap'

gem 'sass-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'therubyracer', platforms: :ruby
gem 'jquery-rails'
gem 'turbolinks'

gem 'jbuilder', '~> 1.2'

group :doc do
  gem 'sdoc', require: false
end

# Use Capistrano for deployment
