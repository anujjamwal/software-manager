<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @software.name %>
</p>

<p>
  <strong>Path:</strong>
  <%= @software.path %>
</p>

<p>
  <strong>Operating system:</strong>
  <%= @software.operating_system_id %>
</p>

<p>
  <strong>State:</strong>
  <%= @software.state %>
</p>

<% if @software.download_policy.permit?(@software, current_user) %>
    <%= link_to 'Download', download_software_url(@software) %> |
<% else %>
    <%= link_to 'Request Access', '' %> |
<% end %>
<%= link_to 'Edit', edit_software_path(@software) %> |

<% unless @software.download_policy.class == DownloadPolicy %>
    <%= link_to 'Licenses', software_licenses_path(@software) %> |
<% end %>

<%= link_to 'Back', softwares_path %>
