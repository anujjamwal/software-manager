<h1>Listing licenses</h1>

<table>
  <thead>
    <tr>
      <th>Software</th>
      <th>License user</th>
      <th>License</th>
      <th>User count</th>
      <th>Allocation count</th>
      <th>Purchase date</th>
      <th>Cost</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @licenses.each do |license| %>
      <tr>
        <td><%= license.software.name %></td>
        <td><%= license.license_user %></td>
        <td><%= license.license %></td>
        <td><%= license.user_count %></td>
        <td><%= license.used_count %></td>
        <td><%= license.purchase_date %></td>
        <td><%= license.cost %></td>
        <td><%= link_to 'Show', software_license_path(@software, license) %></td>
        <td><%= link_to 'Edit', edit_software_license_path(@software, license) %></td>
        <td><%= link_to 'Destroy', software_license_path(@software, license), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New License', new_software_license_path(@software) %>
