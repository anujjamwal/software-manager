<%= link_to_back %>

<h1>Listing licenses</h1>

<table>
  <thead>
    <tr>
      <th>Software</th>
      <th>License user</th>
      <th>License</th>
      <th>User count</th>
      <th>Allocation count</th>
      <th>Purchase date</th>
      <th>Cost</th>
      <th>state</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @licenses.each do |license| %>
      <tr>
        <td><%= license.software.name %>  </td>
        <td><%= license.license_user %>  </td>
        <td><%= license.license %>  </td>
        <td><%= license.user_count %>  </td>
        <td><%= link_to license.used_count, license_allocations_url(license) %>  </td>
        <td><%= license.purchase_date %></td>
        <td><%= license.cost %></td>
        <td><% if license.active? %><span class="label label-success">Active</span><%else%><span class="label label-danger">Inactive</span><%end%></td>
        <td><%= link_to 'Show', software_license_path(license.software, license) %></td>
        <td><%= link_to 'Edit', edit_software_license_path(license.software, license) %></td>
        <td><%= link_to 'Destroy', software_license_path(license.software, license), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.can?(:allocations, :new) && @software%>
<%= link_to 'New License', new_software_license_path(@software) %>
<%end%>